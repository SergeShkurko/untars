$sides = {
  top: bottom,
  bottom: top,
  left: right,
  right: left
}
$size = 10px

.tooltip
  animation fadeIn .4s ease forwards
  z-index 2
  max-width 250px
  &-inner
    padding 10px 16px
    border-radius 4px
    background-color #fff
    box-shadow 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1)
    font-size $fz-small
    font-weight 500
  &-arrow
    width: 0;
    height: 0;
    border 7px solid transparent
    position absolute
    for side, position in $sides
      ^[0][x-placement={"'"+side+"'"}] &
        border-{side} $size + 3 solid #fff
        {position} - $size - 1
      ^[0]
        margin-{position} $size


.tooltip-inner
  font-weight 400

.tooltip-error
  font-weight 400
  &:before
    content 'âœ•'
    display inline-flex
    justify-content center
    align-items center
    color $c-red
    font-weight bold
    border 1px solid $c-red
    border-radius 18px
    width 20px
    height 20px
    padding-top 0.5px
    padding-left 0.5px
    margin-right 8px
