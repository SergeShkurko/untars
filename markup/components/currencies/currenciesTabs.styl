.currencies-tabs
  padding 20px 20px 14px 20px
  border-radius 4px
  border 1px solid #e8e8e8
  display inline-block
  height 100%

  &__item
    display inline-block
    color #a8a8a8
    cursor pointer
    user-select none
    border-bottom 1px solid #a8a8a8
    padding-bottom 5px

    margin-right 16px
    &:last-child
      margin-right 0

    &_active
      color $c-darkest
      border-bottom-color transparent

    &_disabled
      display none
