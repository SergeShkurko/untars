.ordered-list
  list-style none
  padding-left 0
  margin 0
  &__item
    display flex
    counter-increment listItem
    font-size 14px
    line-height 24px
    color $c-darkgray
    &:not(:last-child)
      margin-bottom 20px
    &:before
      content counter(listItem)
      display flex
      align-items center
      justify-content center
      flex-shrink 0
      width 28px
      height 28px
      font-size 15px
      color #fff
      font-weight 500
      text-align center
      border-radius 28px
      background-color $c-red
      margin-right 20px
