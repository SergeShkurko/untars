.section-utp
  +above('md')
    display none

.utps
  &__icon
    display flex
    align-items center
    text-align center
    margin-bottom 10px
    height 85px

  &__title
    color #212a33
    font-weight 500
    font-size 15px
    line-height 18px
    text-align center
    margin-top auto

  &__item
    display flex
    flex-direction column
    justify-content flex-start
    align-items center
    margin-bottom 32px

    &:nth-last-child(-n+2)
        margin-bottom 0

