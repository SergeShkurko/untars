.company-consorc
  position relative
  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#2E1C18, 40%)
    +below('xs')
      z-index 2
  &__container
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    position relative
    background-color #E30000
    padding 80px 52px 64px
  &__row
    width 100%
  &__img
    min-height 100%
  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    overflow hidden
    +below('xs')
      justify-content flex-end

  &__heading
    color #fff
    margin-bottom 40px
    +below('xs')
      margin-bottom 16px

  &__item
    display flex
    justify-content center
    align-items center
    height 100px
    margin-bottom 16px

  &__company-logo
    width 65%

    +below('sm')
      width 65%

    +below('xs')
      width 100%
