.up-button
  position fixed
  left 50px
  bottom 50px
  width 56px
  height 56px
  display none
  align-items center
  justify-content center
  box-shadow 0 2px 6px 0 rgba(0,0,0,0.08), 0 2px 2px 0 rgba(181,187,194,0.1)
  border-radius 4px
  cursor pointer
  background-color #fff
  z-index 2
  +below('md')
    left 40px
    bottom 40px
    width 50px
    height 50px
  +below('sm')
    left 30px
    bottom 30px
    width 45px
    height 45px
  +below('xs')
    left initial
    right 20px
    bottom 20px
  &__icon
    transform rotate(90deg)
    display flex
    justify-content center
    flex-grow 1
    svg
      width 19px
      height 16px
      fill $c-red
