.terms
  margin-bottom 60px
  &__item
    font-size 16px
    line-height 18px
    color rgba($c-darkgray, 50%)
    display flex
    +below('xs')
        font-size 14px
    ~/_theme_light &
      color #fff
      font-weight 300
    &:not(:last-child)
      margin-bottom 8px
    &:before
      content ''
      display block
      flex-shrink 0
      width 5px
      height 3px
      border-left 2px solid $c-red
      border-bottom 2px solid $c-red
      transform rotate(-45deg)
      margin-right 9px
      margin-top 5px
      ~/_theme_light &
        border-color #fff
