.navbar
  display flex
  justify-content space-between
  overflow auto
  $scrollbar()
  &_vertical
    flex-direction column
    overflow initial
    margin-bottom 40px
  &_in_footer
    +below('xs')
      flex-direction column
      overflow initial
  &__link
    color $c-darkest
    $transition(color)
    margin-right 30px
    flex-shrink 0
    +above('md')
      padding-top 30px
      padding-bottom 30px
    &:last-child
      margin-right 0
    ^[0]_vertical &
      $font-size($fz-xlarge)
      margin-bottom 29px
      &:last-child
        margin-bottom 0
    ^[0]_in_footer &
      color $c-lightgray
      +below('xs')
        margin-bottom 20px
        &:last-child
          margin-bottom 0
    &:hover
      color $c-red
    &_active
      +above('md')
        border-bottom 2px solid $c-red
