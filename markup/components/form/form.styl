.form
  background-color $c-red
  padding 60px 95px
  &_small
    padding 40px
  &_expand_xs
    +below('xs')
      margin-left -15px
      margin-right -15px

  +below('md')
    padding 32px 50px
  +below('xs')
    padding 32px 25px
  &__heading
    color #fff
    ~/_small &
      font-size 32px
  &__text
    color #fff
    margin-bottom 40px
  &__hint
    font-size $fz-small
    line-height 18px
    color #fff
    margin-bottom 30px
    margin-top 40px
  &__link
    text-decoration underline
    color #fff
  & &__input
    border none
    border-bottom 1px solid #fff
    padding 0
    height 36px
    color #fff
    font-weight 400
    -webkit-text-fill-color #fff!important
    -webkit-box-shadow 0 0 0 30px $c-red inset!important

  & &__input-wrapper
    min-height auto
    padding-top 13px
    margin-bottom 28px
  &.invalid &__input-wrapper:not(.invalid-input)
      opacity 0.6

  &__button
    width 160px
    height 57px
    .button__icon
      display none
    ^[0].invalid &
      box-shadow inset 0 0 0 1px #fff
      background-color $c-red
      .button__text
        color #fff

  &__progressbar
    display none
    width 160px
    height 57px

  .input-container
    &__placeholder
      font-weight 400
      line-height 20px
      color #fff
      transform translate3d(0px, 9px, 0)
    &_has_focus .input-container__placeholder
    &_has_value .input-container__placeholder
      font-size $fz-small
      transform: translate3d(0px, -16px, 0);
      font-weight 400
    &__textarea
      margin-top 8px
      padding-bottom 4px
      &::-webkit-scrollbar
        width 3px
        height 3px
        border-radius 4px
        background-color rgba(#fff, 40%)
      &::-webkit-scrollbar-thumb
        background-color rgba(#fff, 60%)
        border-radius 4px
    &__required-mark
        position absolute
        right 0
        top calc(50% - 2px)
        width 4px
        height 4px
        border-radius 4px
        background-color #fff
        cursor pointer

.progressbar
  position relative
  &__line
    position absolute
    top calc(50% - 2px)
    height 4px
    border-radius 4px
    &_inner
      background-color #AA0000
      width 100%
    &_outer
      $transition(width)
      background-color #fff
      width 0%
