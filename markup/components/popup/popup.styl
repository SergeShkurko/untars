.popup
  position fixed
  // position static
  z-index 3
  width 100%
  height 100%
  opacity 0
  opacity 1
  justify-content center
  align-items center
  background-color rgba(0,0,0,0.25)
  top 0
  left 0
  right 0
  bottom 0
  padding-top 30px
  padding-bottom 30px
  display none
  // display flex
  +below('xs')
    padding 0
  &__content
    width 100%
    +below('xs')
      height 100%
  &__container
    position relative
    +below('xs')
      padding 0
      height 100%
  &__body
    background-color #fff
  &__controls-bar
    position absolute
    top 0
    height 80px
    background-color #fff
    width 100%
    z-index 1
    +below('xs')
      height 52px
  &__close-button
    cursor pointer
    display flex
    align-items center
    justify-content center
    text-align center
    position absolute
    top 17px
    right 17px
    z-index 1
    width 52px
    height 52px
    font-size 20px
    +below('xs')
      background-color #fff
      top 0
      right 0
      border-left 1px solid $c-light-border
    &:hover
      svg
        fill $c-darkred
    svg
      $transition(fill)
      fill $c-red

