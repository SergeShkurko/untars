$c-red = #E30000
$c-darkred = #CC0000
$c-ui_red = #F92A2A
$c-green = #41C153
$c-primary = #0B1F35
$c-background_default = #F3F4F5
$c-background_content = #FDFDFD
$c-background_corporate = #212A33
$c-background_personal = #0E3464
$c-icon-line = #6F86A2
$c-icon-fill = #E0E4EB
$c-icon-fill_light = #EDEFF3
$c-darkest = #172A3F
$c-darker = #4D555C
$c-darkgray = #546271
$c-gray = #6D7986
$c-lightgray = #B5BBC2
$c-light-border = #E1E4E7


$fz-xsmall = 12px
$fz-small = 13px
$fz-medium = 16px
$fz-large = 18px
$fz-xlarge = 20px
$fz-xxl = 24px
$fz-predouble = 32px
$fz-double = 32px
$fz-triple = 40px
$fz-giant = 48px
$fz-biggest = 52px

$font = Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

$transition(property)
  transition .3s ease property

$font-size(size)
  font-size size
  line-height size + 4

$shadow()
  box-shadow: 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1);

$scrollbar()
  &::-webkit-scrollbar
    width 3px
    height 3px
    border-radius 4px
    background-color rgba($c-lightgray, 20%)
  &::-webkit-scrollbar-thumb
    background-color rgba($c-lightgray, 40%)
    border-radius 4px

$scrollbar-vertical()
  &::-webkit-scrollbar
    width 4px
    height 4px
  &::-webkit-scrollbar-thumb
    background-color rgba($c-lightgray)
    border-radius 4px
